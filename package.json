{
  "name": "todo-list",
  "version": "1.0.0",
  "description": "This awesome todo app is a demo for API first design.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "jest --reporters default jest-stare --coverage --detectOpenHandles --testTimeout=60000",
    "test:watch": "jest --verbose --watchAll"
  },
  "jest": {
    "verbose": true,
    "coverageReporters": ["html","text"],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keith-marchant/todo-list.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/keith-marchant/todo-list/issues"
  },
  "homepage": "https://github.com/keith-marchant/todo-list#readme",
  "devDependencies": {
    "jest": "^26.6.3",
    "jest-stare": "^2.2.0",
    "supertest": "^6.0.1"
  }
}
